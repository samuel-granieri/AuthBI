@{
    ViewData["Title"] = "Recuperar Senha";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Recuperar Senha</h3>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-info">@ViewBag.Message</div>
                    }
                    <form asp-action="ForgotPassword" method="post">
                        <div class="mb-4">
                            <label class="form-label">Digite seu e-mail cadastrado</label>
                            <input type="email" name="email" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Enviar Link</button>
                    </form>
                    <div class="mt-3 text-center">
                        <a asp-action="Login">Voltar para o Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>